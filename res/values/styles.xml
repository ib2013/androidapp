<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="myTheme" parent="AppTheme">     
    	<item name="actionBarStyle">@style/Theme.MyAppTheme.ActionBar</item>
    	
    </style>

        <color name="crvena_light">#33B5E5</color>
    <color name="crvena_dark">#FF7000</color>
    <color name="bela">#FFFFFF</color>
    
    <style name="Theme.MyAppTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/crvena_dark</item>
        <item name="titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
        <item name="icon">@drawable/tpb</item>
    </style>
    
        <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bela</item>
    </style>
</resources>
